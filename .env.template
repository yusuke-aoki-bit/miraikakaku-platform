# MiraiKakaku Environment Configuration Template
# Copy this file to .env and replace with your actual values
# NEVER commit .env files with real credentials to version control

# Database Configuration (replace with your values)
DATABASE_URL=postgresql://username:password@host:port/database_name
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DATABASE=your-database-name
POSTGRES_USER=your-username
DB_HOST=your-host
DB_PORT=5432
DB_NAME=your-database
DB_USER=your-username
DB_PASSWORD=your-secure-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Authentication - Generate new secure keys
JWT_SECRET_KEY=your-jwt-secret-key-generate-new-one
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./path-to-service-account.json

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_ENDPOINT=your-endpoint-if-needed

# API Configuration
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
LOG_LEVEL=info
NODE_ENV=development

# External Services - Replace with your API keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key-if-needed

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=200h

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Session Configuration
SESSION_SECRET=your-session-secret-generate-new-one