{
  "name": "miraikakaku-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "MiraiKakaku AI Stock Prediction Platform - Unified Dependency Management",
  "workspaces": [
    "miraikakakufront",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=miraikakakufront",
    "dev:api": "cd miraikakakuapi && uvicorn main:app --reload --host 0.0.0.0 --port 8080",
    "dev:batch": "cd miraikakakubatch && python -m functions.simple_batch_main",
    "build": "npm run build --workspace=miraikakakufront",
    "test": "npm run test:e2e --workspace=miraikakakufront",
    "test:api": "cd miraikakakuapi && python -m pytest",
    "test:batch": "cd miraikakakubatch && python -m pytest",
    "lint": "npm run lint --workspace=miraikakakufront",
    "lint:api": "cd miraikakakuapi && flake8 .",
    "lint:batch": "cd miraikakakubatch && flake8 .",
    "security:audit": "npm audit && npm audit --workspace=miraikakakufront",
    "security:fix": "npm audit fix --force && npm audit fix --force --workspace=miraikakakufront",
    "deps:update": "npm update && npm update --workspace=miraikakakufront",
    "deps:outdated": "npm outdated && npm outdated --workspace=miraikakakufront",
    "clean": "npm run clean --workspace=miraikakakufront && rm -rf node_modules",
    "reset": "npm run clean && npm install",
    "setup": "npm install && npm install --workspace=miraikakakufront"
  },
  "devDependencies": {
    "puppeteer": "^24.22.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miraikakaku/miraikakaku"
  },
  "keywords": [
    "ai",
    "stock-prediction",
    "finance",
    "machine-learning",
    "nextjs",
    "fastapi",
    "python"
  ],
  "author": "MiraiKakaku Team",
  "license": "MIT",
  "dependencies": {}
}
